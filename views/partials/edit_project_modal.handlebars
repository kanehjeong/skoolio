<!-- MODAL POST PROJECT START -->
<div class="modal fade" id="editModal{{_id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Update Your Project</h4>
            </div>

            <form action="user_projects/{{_id}}/edit" method="post" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Project Name</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" class="form-control" name="title" id="project-name" value="{{title}}">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="project-type" class="col-sm-2 control-label">Type of Project</label>
                        <div class="col-sm-10">
                            <select name="type">
                                <option {{#if webApp}}selected="selected"{{/if}} value="Web Application"> Web Application
                                <br />
                                <option {{#if androidApp}}selected="selected"{{/if}} value="Android Application"> Android Application
                                <br />
                                <option {{#if iphoneApp}}selected="selected"{{/if}} value="Iphone Application"> iPhone Application
                                <br />
                                <option {{#if research}}selected="selected"{{/if}} value="Research"> Research
                                <br />
                                <option {{#if engineer}}selected="selected"{{/if}} value="Engineer"> Engineer
                                <br />
                                <option {{#if other}}selected="selected"{{/if}} value="Other"> Other
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-2 control-label">Description</label>

                        <div class="col-sm-10">
                            <textarea name="description" class="edit-project-description" id="project-description{{_id}}" maxlength="240" rows="5" cols="50" required="required">{{description}}</textarea>
                            <h6 class="pull-right">
                                <span id="edit-characters-remaining{{_id}}">240</span>
                                characters remaining
                            </h6>
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="roles" class="col-sm-2 control-label">Roles Wanted</label>
                        <div class="col-sm-10">
                            <div id="edit-role-form" class="input-group">
                                {{#each rolesArr}}
                                    <input type="text" class="form-control" name="roles" value="{{this}}">
                                    </br>
                                {{/each}}
                                
                            </div>
                            
                            <div><button id="edit-add-role-form" type="button">Add More Roles</button></div> 
                        </div>
                        
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="submitProject" class="btn btn-primary" type="submit">Edit Project</button>
                </div>
            </form>
        </div>
    </div>
</div> <!-- MODAL POST PROJECT END -->