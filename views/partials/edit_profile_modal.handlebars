<!-- MODAL POST PROJECT START -->
<div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="editProfileModalLabel">Update Your Profile</h4>
            </div>

            <form action="profile/user{{_id}}/edit" method="post" class="form-horizontal" enctype="multipart/form-data">
                <div class="modal-body">
                    
                    <div class="form-group">
                        <label for="roles" class="col-sm-2 control-label">Your Skills</label>
                        <div class="col-sm-10">
                            <div id="edit-skill-form" class="input-group">
                                {{#each skills}}
                                    <input type="text" class="form-control" name="skills" value="{{this}}">
                                    </br>
                                {{/each}}
                                
                            </div>
                            <div>
                                <button id="edit-add-skill-form" type="button">Add More Skills</button>
                            </div> 
                        </div>    
                    </div>

                    <div class="form-group">
                        <label for="bio" class="col-sm-2 control-label">Bio</label>
                        <div class="col-sm-10">
                            <textarea name="bio" class="edit-profile-bio" id="profile-bio" maxlength="400" rows="5" placeholder="Tell us about yourself" >{{bio}}</textarea>
                            <h6 class="pull-right">
                                <span id="characters-remaining">400</span>
                                characters remaining
                            </h6>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="image" class="col-sm-2 control-label">Images</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control" name="image" class="profile-image">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="submitProject" class="btn btn-primary" type="submit">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div> <!-- MODAL POST PROJECT END -->