                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <!-- Header -->
                    <div class="page-header">
                        <h3 class="reviews">Skoolio</h3>

                        <div class="comment-tabs">
                            <!-- Tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="active">
                                    <a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Projects</h4></a>
                                </li>
                                <li>
                                    <a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Post Project</h4></a>
                                </li>
                                <li>
                                    <a href="#account-settings" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Search Projects</h4></a>
                                </li>
                            </ul>
                            
                            <div class="tab-content">
                                <!-- Projects Tab -->
                                <div class="tab-pane active" id="comments-logout">
                                    <ul class="media-list">
                                        <br />
                                        {{#each projects}}
                                        <!-- Project Posts -->
                                        <li class="media">
                                            
                                            <div class="media-body">
                                                <div class="well well-lg">

                                                    <ul class="media-date text-uppercase reviews list-inline">
                                                        <li class="pull-left"><h4>{{title}}</h4><li>
                                                        <li class="pull-right">{{createdAt}}</li>
                                                    </ul>

                                                    <br />
                                                    <p class="media-comment">
                                                        <label>Type:</label> {{type}}
                                                    </p>
                                                    <p class="media-comment">
                                                        <label>Role:</label> {{roles}}
                                                    </p>
                                                    <div class="more">
                                                        <label>Description:</label> {{description}}
                                                    </div>

                                                    <br />
                                                    <!--<a href="#{{_id}}" class="btn btn-info btn-circle text-uppercase" data-toggle="collapse"><span class="glyphicon glyphicon-share-alt"></span> Details</a>-->
                                                    <a href="/project_details/{{id}}" id="project{{id}}" class="btn btn-info btn-circle text-uppercase project-obj"><span class="glyphicon glyphicon-share-alt"></span> Details</a>

                                                    <a href="/interested/{{id}}" id="interested{{id}}" class="btn btn-info btn-circle text-uppercase interested-obj"><span class="glyphicon glyphicon-ok"></span> Interested</a>
                                                </div>
                                            </div>
                                            <!--<div class="collapse" id="{{_id}}">
                                                <ul class="media-list">
                                                    <li class="media media-replied">
                                                        <div class="media-body">
                                                            <div class="well well-lg">
                                                                <form action="/homepage">
                                                                    <input type="submit" value="Interested">
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>-->
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <!-- Post Project Tab -->
                                <div class="tab-pane" id="add-comment">
                                    <br />
                                    <form method="post" class="form-horizontal" id="commentForm" role="form">
                                        <div class="form-group">
                                            <label for="title" class="col-sm-2 control-label">Project Name</label>
                                            <div class="col-sm-10">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" name="title" id="project-name" placeholder="Enter Project Name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="project-type" class="col-sm-2 control-label">Type of Project</label>
                                            <div class="col-sm-10">
                                                <input type="radio" name="type" value="Web Application" required="required"> Web Application
                                                <br />
                                                <input type="radio" name="type" value="Android Application"> Android Application
                                                <br />
                                                <input type="radio" name="type" value="Iphone Application"> iPhone Application
                                                <br />
                                                <input type="radio" name="type" value="Research"> Research
                                                <br />
                                                <input type="radio" name="type" value="Engineer"> Engineer
                                                <br />
                                                <input type="radio" name="type" value="Other"> Other
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="description" class="col-sm-2 control-label">Description</label>

                                            <div class="col-sm-10">
                                                <textarea name="description" id="project-description" maxlength="240" rows="5" placeholder=" Enter brief summary of your project"></textarea>
                                                <h6 class="pull-left">
                                                    <span id="characters_remaining">240</span>
                                                    characters remaining
                                                </h6>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label for="roles" class="col-sm-2 control-label">Roles Wanted</label>
                                            <div class="col-sm-10">
                                                <div id="role-form" class="input-group">
                                                    <input type="text" class="form-control" name="roles" id="project-roles" placeholder="Enter roles wanted">
                                                    <div></div>
                                                </div>
                                                <div><button id="add-role-form" type="button">Add</button></div> 
                                            </div>
                                            
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <button class="btn btn-success btn-circle text-uppercase" type="submit" id="submitProject">Post Project</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <!-- Search Projects Tab -->
                                <div class="tab-pane" id="account-settings">
                                    <form action="#" method="post" class="form-horizontal" id="accountSetForm" role="form">
                                        <br />
                                        <div class="form-group">
                                            <label for="name" class="col-sm-2 control-label">Project Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="name" id="name" placeholder="Enter Project Name">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="nickName" class="col-sm-2 control-label">Role</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="nickName" id="nickName">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="email" class="col-sm-2 control-label">Platform</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control" name="email" id="email">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10">
                                                <button class="btn btn-primary btn-circle text-uppercase" type="submit" id="submit"><a href="/homepage">Search</a></button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/homepage.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</html>